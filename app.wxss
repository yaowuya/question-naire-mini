/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  /* justify-content: space-between; */
  box-sizing: border-box;
  padding: 0 40rpx;
}

page {
  width: 100vw;
  height: 100vh;
  font-family: Arial, Helvetica, sans-serif;
}

.text-right {
  text-align: right;
}

.float-right {
  float: right;
}

.float-left {
  float: left;
}

.w-100 {
  width: 100%;
}

.card {
  border: 1px solid #ebeef5;
  border-radius: 6rpx;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}